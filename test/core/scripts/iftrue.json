{
  "config": {
    "target": "http://127.0.0.1:3003",
    "phases": [
      { "duration": 10, "arrivalRate": 1 }
    ],
    "payload": {
      "fields": ["species", "name"]
    },
    "variables": {
      "name": "Hassy"
    }
  },
  "scenarios": [
    {
      "name": "Create a pet and verify it's been created (JSON).",
      "flow": [
        {"post":
         {
           "url": "/pets",
           "json": {"name": "{{ name }}", "species": "{{ species }}"},
           "capture": {
             "json": "$.id",
             "as": "id"
           }
         }
        },
        {"get": {
          "url": "/pets/{{ id }}",
          "ifTrue": "notDefined"
        }},
        {"get": {
          "url": "/pets/{{ name }}",
          "ifTrue": "name === 'Hassy'"
        }}
      ]
    }
  ]
}
