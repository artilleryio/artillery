{
  "config": {
    "target": "http://127.0.0.1:3003",
    "phases": [{ "duration": 1, "arrivalRate": 1 }]
  },
  "scenarios": [
    {
      "flow": [
        {
          "get": {
            "url": "/productLinks",
            "capture": {
              "selector": "a[class^=productLink]",
              "index": "random",
              "attr": "href",
              "as": "productLink"
            }
          }
        },
        {
          "get": {
            "url": "{{ productLink }}"
          }
        }
      ]
    }
  ]
}
