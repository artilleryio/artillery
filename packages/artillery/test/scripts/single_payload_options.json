{
  "config": {
    "target": "http://127.0.0.1:3003",
    "phases": [
      { "duration": 2, "arrivalRate": 10 }
    ],
    "payload": {
      "path": "./pets.txt",
      "fields": ["species", "name"],
      "options": {
        "delimiter": " "
      }
    }
  },
  "scenarios": [
    {
      "flow": [
        {"get": {"url": "/{{{name}}}"}},
        {"post": {"url": "/pets", "json": {"name": "{{ name }}", "species": "{{ species }}"}}}
      ]
    }
  ]
}
